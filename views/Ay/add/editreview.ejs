    <meta name="author" content="Ayberk Yavaş">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Yorumunu Düzenle | Parkpin</title>
    <link rel="stylesheet" href="/cssAy/add/editreview.css" />
    <link rel="icon" type="image/x-icon" href="/img/favicon/favicon.png">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <!--<link rel="stylesheet" href="../css/main.css"/> -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous" />
    <!-- FONT ICIN -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="crossorigin" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@500;700&display=swap" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/ec613c6134.js" crossorigin="anonymous"></script>
</head>

<body>

    <!--================ Loader Başlangıç =================-->
    <div id="loader"></div>
    <!--================ Loader Bitiş =================-->

    <!--================ Demo Başlangıç =================-->

    <div id="demo-div">
        <div class="shineline"></div>
        <ul>
            <li>
                <h3>Demo Version - V1.2 - <a href="https://discord.gg/xtBA3vsj" target="_blank"
                        style="color: white; text-decoration: none;">
                        <i class="fa-brands fa-discord"></i>
                    </a></h3>
            </li>
        </ul>
    </div>

    <!--================ Demo Bitiş =================-->
    <!--================= HEADER ===================-->
    <header>
        <div class="header">
            <a href="/me"><span><i class="fa-solid fa-arrow-left"></i> Geri Dön</span></a>
            <a href="/"><img src="/img/logo/parkpinDot.png" alt="Logo"></a>
        </div>
    </header>
    <!--================= HEADER BİTİŞ ===================-->

    <!--================= Main Alanı Başlangıç ===================-->
    <main>
        <div class="main-container">
            <!--====== Form Container ======-->
            <section>
                <div class="review-container">
                    <div class="form-container">
                        <form action="/parkingLots/<%= id %>/reviews/<%= review._id %>?_method=PUT" method="POST" novalidate class="validated-form">
                            <h3 class="pull-left">Yorumunu Düzenle</h3>
                            <fieldset>
                                <div class="row">
                                    <div class="col-sm-3 col-lg-2 hidden-xs">
                                        <img class="img-responsive" src="<%= currentUser.image.url %>"
                                            alt="">
                                    </div>
                                    <div class="form-group col-xs-12 col-sm-9 col-lg-10">
                                        <div class="mb-3">
                                            <fieldset class="starability-heart">
                                                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="<%= review.rating %>" checked
                                                    aria-label="No rating." />
                                                <input type="radio" id="first-rate1" name="review[rating]" value="1" <%= (review.rating == 1) ? "checked" : "" %>/>
                                                <label for="first-rate1" title="Terrible">1 star</label>
                                                <input type="radio" id="first-rate2" name="review[rating]" value="2" <%= (review.rating == 2) ? "checked" : "" %>/>
                                                <label for="first-rate2" title="Not good">2 stars</label>
                                                <input type="radio" id="first-rate3" name="review[rating]" value="3" <%= (review.rating == 3) ? "checked" : "" %>/>
                                                <label for="first-rate3" title="Average">3 stars</label>
                                                <input type="radio" id="first-rate4" name="review[rating]" value="4" <%= (review.rating == 4) ? "checked" : "" %>/>
                                                <label for="first-rate4" title="Very good">4 stars</label>
                                                <input type="radio" id="first-rate5" name="review[rating]" value="5" <%= (review.rating == 5) ? "checked" : "" %>/>
                                                <label for="first-rate5" title="Amazing">5 stars</label>
                                            </fieldset>
                                        </div>
                                        <div class="mb-3">
                                            <input type="text" class="form-control" id="commentTitle" value="<%= review.title %>"  name="review[title]"
                                                required>
                                        </div>
                                        <textarea class="form-control" id="message"name="review[body]"
                                            required=""> <%= review.body %> </textarea>
                                    </div>
                                </div>
                            </fieldset>
                            <br>
                            <button class="btn btn-success pull-right" style="float: left;"><i
                                    class="fa-solid fa-floppy-disk"></i> Kaydet</button>
                        </form>

                        <form action="/parkingLots/<%= id %>/reviews/<%= review._id %>?_method=DELETE" class="delete-form" method="post">
                            <button class="btn btn-danger" style="float: left;"><i
                                class="fa-regular fa-trash-can"></i><span> Sil</span></button>
                        </form>
                    </div>
                </div>
            </section>
            <!--====== Form Container Bitiş ======-->
        </div>
    </main>
    <!--================= Main Alanı Bitiş ===================-->

    <!--================ Footer Alanı Başlangıç ================-->
    <footer class="footer">
        <div class="waves">
          <div class="wave" id="wave1"></div>
          <div class="wave" id="wave2"></div>
          <div class="wave" id="wave3"></div>
          <div class="wave" id="wave4"></div>
        </div>
        <ul class="social-icon">
          <li class="social-icon__item"><a class="social-icon__link" href="#">
              <ion-icon name="logo-facebook"></ion-icon>
            </a></li>
          <li class="social-icon__item"><a class="social-icon__link" href="#">
              <ion-icon name="logo-twitter"></ion-icon>
            </a></li>
          <li class="social-icon__item"><a class="social-icon__link" href="#">
              <ion-icon name="logo-linkedin"></ion-icon>
            </a></li>
          <li class="social-icon__item"><a class="social-icon__link" href="#">
              <ion-icon name="logo-instagram"></ion-icon>
            </a></li>
        </ul>
        <ul class="footer-menu">
          <li class="menu__item"><a class="menu__link" href="/">Ana Sayfa</a></li>
          <li class="menu__item"><a class="menu__link" href="/parkingLots">Otoparklar</a></li>
          <li class="menu__item"><a class="menu__link" href="#">Hakkımızda</a></li>
          <li class="menu__item"><a class="menu__link" href="#">Takımımız</a></li>
          <li class="menu__item"><a class="menu__link" href="#">İletişim</a></li>
    
        </ul>
        <p>&copy;2023 <a style="color:#fff; text-decoration: none;" href="ayberkyavas.com" target="_blank">
            YAVAS</a> | Tüm Hakları Saklıdır.</p>
      </footer>
