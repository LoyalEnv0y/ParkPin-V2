    <div class="header">
      <a href="/me"><span><i class="fa-solid fa-arrow-left"></i> Geri Dön</span></a>
      <a href="/"><img src="/img/logo/parkpinDot.png" alt="Logo"></a>
    </div>
  </header>
  <!--================= HEADER BİTİŞ ===================-->

  <!--================= Main Alanı Başlangıç ===================-->
  <main>
    <div class="main-container">

      <!--====== Banner Container ======-->
      <section>
        <div class="banner-container">
          <h2>Arabanı Ekle</h2>
          <img src="/img/pages/addcar/cars.png" class="img-fluid" alt="Araba Fotoğrafları">
        </div>
      </section>
      <!--====== Banner Container Bitiş ======-->

      <!--====== Form Container ======-->
      <section>
        <div class="addcar-container">
          <form action="/cars" method="POST" novalidate class="validated-form">

            <div class="row mb-3" aria-required="true">
              <label for="brand" class="col-sm-2 col-form-label">Marka</label>
              <div class="col-sm-10">
                <select class="form-select" id="brand" name="car[brand]" required>
                  <% for(let brand in cars) { %>
                    <option value="<%= brand %>"><%= brand %></option>
                  <% } %>
                </select>
              </div>
            </div>

            <div class="row mb-3" aria-required="true">
              <label for="model" class="col-sm-2 col-form-label">Model</label>
              <div class="col-sm-10">
                <select class="form-select" id="model" name="car[model]" required>
                  <% for(let model of cars.Volvo) { %>
                    <option value="<%= model %>"><%= model %></option>
                  <% } %>
                </select>
              </div>
            </div>

            <fieldset class="row mb-3" aria-required="true">
              <legend class="col-form-label col-sm-2 pt-0">LPG?</legend>
              <div class="col-sm-10" id="radiobox-container">
                <div class="form-check form-switch">
                  <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" name="car[hasLPG]">
                  <label class="form-check-label" for="flexSwitchCheckChecked"></label>
                </div>
              </div>
            </fieldset>

            <fieldset class="row mb-3" aria-required="true" id="colorpicker">
              <legend class="col-form-label col-sm-2 pt-0">Renk</legend>
              <input type="color" class="form-control form-control-color" id="exampleColorInput" value="#563d7c"
                title="Choose your color">
            </fieldset>

            <fieldset class="row mb-3" aria-required="true" id="colorpicker">
              <legend class="col-form-label col-sm-2 pt-0">Açıklama</legend>
              <textarea class="form-control" cols="10" rows="5" name="car[description]"></textarea>
            </fieldset>

            <button class="btn btn-primary">Ekle</button>
          </form>
        </div>
      </section>
      <!--====== Form Container Bitiş ======-->
    </div>
  </main>
  <!--================= Main Alanı Bitiş ===================-->

  <!--================ Footer Alanı Başlangıç ================-->
