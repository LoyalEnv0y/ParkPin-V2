<!doctype html>
<html lang="tr">

<head>
  <meta charset="UTF-8">
  <meta name="description"
    content="Tüm otoparklarımızı görüntüleyebilirsiniz. Arabanız için güvenli bir otopark rezervasyonu yaptırmanın tam zamanı.">
  <meta name="keywords" content="otopark,parkpin,rezervasyon,akıllı otopark,park etme,havalimanı">
  <meta name="author" content="Ayberk Yavaş">
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Otoparklar | Parkpin</title>
  <link rel="stylesheet" href="cssAy/otoparklar.css" />
  <link rel="icon" type="image/x-icon" href="img/favicon/favicon.png">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
  <!-- FONT ICIN -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@500;700&display=swap" rel="stylesheet" />
  <script src="https://kit.fontawesome.com/ec613c6134.js" crossorigin="anonymous"></script>
  <script src="jsAy/main.js"></script>

    <!-- MapBox -->
  <script src='https://api.mapbox.com/mapbox-gl-js/v2.13.0/mapbox-gl.js'></script>
  <link href='https://api.mapbox.com/mapbox-gl-js/v2.13.0/mapbox-gl.css' rel='stylesheet' />
</head>

<body>

  <!--================ Loader Başlangıç =================-->
  <div id="loader"></div>
  <!--================ Loader Bitiş =================-->

  <!--================ Demo Başlangıç =================-->

  <div id="demo-div">
    <div class="shineline"></div>
    <ul>
      <li>
        <h3>Demo Version - V1.2 - <a href="https://discord.gg/xtBA3vsj" target="_blank"
            style="color: white; text-decoration: none;">
            <i class="fa-brands fa-discord"></i>
          </a></h3>
      </li>
    </ul>
  </div>

  <!--================ Demo Bitiş =================-->

  <!--================ Header Başlangıç =================-->
  <header>
    <div class="header">
      <div id="mainLogo" class="mainLogo">
        <div id="mainLogoDot"><img src="img/logo/mainLogo.png" alt="Logo"></div>
        <h6><a href="/" style="text-decoration: none; color: black; cursor: default;">parkpin</a></h6>
      </div>
      <input class="menu-btn" type="checkbox" id="menu-btn" />
      <label class="menu-icon" for="menu-btn"><span class="nav-icon"></span></label>
      <ul class="menu">
        <li><a href="/parkingLots">Otoparklar</a></li>

        <% if (!currentUser) { %>
          <li><a href="/login">Giriş Yap</a></li>
        <% } else { %>
          <li>
            <a href="/me" class="account-profile">
              <span class="account-profile-mobile">Hesabım</span>
              <div class="profile">
                <img src="<%= currentUser.image.avatar %>">
              </div>
            </a>
          </li>
        <% } %>
      </ul>
    </div>
  </header>
  <!--================ Header Bitiş =================-->

  <!--================ Main Alanı Başlangıç =================-->
  <main>
    <div class="main-container">

      <!--================ MAP Alanı Başlangıç =================-->
      <section>
        <div class="map-container">
          <div id="map"></div>
        </div>
      </section>
      <!--================ MAP Alanı Bitiş =================-->

      <!--================ Otopark Alanı Başlangıç =================-->
      <section class="col2">
        <div class="allparkinglots-container">
          <h2>Tüm otoparklar</h2>
          <hr>
          <div class="row row-cols-1 row-cols-md-3 g-4">

            <% for(const parkingLot of parkingLots) { %>
              <div class="col">
                <div class="card h-100">
                  <a href="/parkingLots/<%= parkingLot._id %>">
                    <img src="<%= parkingLot.images[0].url %>" class="card-img-top">
                  </a>
                  <div class="card-body">
                    <a href="/parkingLots/<%= parkingLot._id %>" style="color: black; text-decoration: none;">
                      <h5 class="card-title"><%= parkingLot.name %></h5>
                    </a>
                    <p class="card-text">Lorem ipsum dolor sit amet consectetur adipisicing elit. Corrupti inventore dolores possimus assumenda ad incidunt.</p>
                  </div>
                  <div class="card-footer">
                    <small class="text-body-secondary" data-park-id="<%= parkingLot._id %>">
                      <%= parkingLot.getAvailableSlotNum %>
                      12 park yeri mevcut
                    </small>
                    <a href="/parkingLots/<%= parkingLot._id %>"><button type="button" class="btn btn-primary btn-sm"><i
                          class="fa-solid fa-square-parking"></i> Rezervasyon</button></a>
                  </div>
                </div>
              </div>  
            <% } %>
            <!-------------BURAYA YAPIŞTIR----------------->
          </div>
        </div>
      </section>

      <!--================ Otopark Alanı Bitiş =================-->

    </div>
  </main>
  <br><br>
  <!--================ Main ALanı Bitiş ================-->

  <!--================ Footer Alanı Başlangıç ================-->
  <footer class="footer">
    <div class="waves">
      <div class="wave" id="wave1"></div>
      <div class="wave" id="wave2"></div>
      <div class="wave" id="wave3"></div>
      <div class="wave" id="wave4"></div>
    </div>
    <ul class="social-icon">
      <li class="social-icon__item"><a class="social-icon__link" href="#">
          <ion-icon name="logo-facebook"></ion-icon>
        </a></li>
      <li class="social-icon__item"><a class="social-icon__link" href="#">
          <ion-icon name="logo-twitter"></ion-icon>
        </a></li>
      <li class="social-icon__item"><a class="social-icon__link" href="#">
          <ion-icon name="logo-linkedin"></ion-icon>
        </a></li>
      <li class="social-icon__item"><a class="social-icon__link" href="#">
          <ion-icon name="logo-instagram"></ion-icon>
        </a></li>
    </ul>
    <ul class="footer-menu">
      <li class="menu__item"><a class="menu__link" href="/">Ana Sayfa</a></li>
      <li class="menu__item"><a class="menu__link" href="/parkingLots">Otoparklar</a></li>
      <li class="menu__item"><a class="menu__link" href="#">Hakkımızda</a></li>
      <li class="menu__item"><a class="menu__link" href="#">Takımımız</a></li>
      <li class="menu__item"><a class="menu__link" href="#">İletişim</a></li>

    </ul>
    <p>&copy;2023 <a style="color:#fff; text-decoration: none;" href="ayberkyavas.com" target="_blank">
        YAVAS</a> | Tüm Hakları Saklıdır.</p>
  </footer>
  <!--================ Footer Alanı Bitiş ================-->
  <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
  <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
  <script src="jsAy/rating.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.7/dist/umd/popper.min.js"
    integrity="sha384-zYPOMqeu1DAVkHiLqWBUTcbYfZ8osu1Nd6Z89ify25QV9guujx43ITvfi12/QExE"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.min.js"
    integrity="sha384-Y4oOpwW3duJdCWv5ly8SCFYWqFDsfob/3GkgExXKV4idmbt98QcxXYs9UoXAB7BZ"
    crossorigin="anonymous"></script>

  <script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const parkingLots = { features: <%- JSON.stringify(parkingLots) %>}
  </script>
  
  <script src="js/clusterMap.js"></script>
  <script src="js/availableSlotNum.js"></script>
</body>

</html>